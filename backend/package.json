{
  "name": "tic-tac-toe-backend",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop tic-tac-toe-server",
    "pm2:restart": "pm2 restart tic-tac-toe-server",
    "pm2:delete": "pm2 delete tic-tac-toe-server",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs tic-tac-toe-server",
    "pm2:monit": "pm2 monit",
    "never-down": "npm run pm2:start && node server-monitor.js",
    "immortal": "powershell -ExecutionPolicy Bypass -File ./immortal-server.ps1",
    "monitor": "node server-monitor.js",
    "health": "curl http://localhost:4000/health || echo 'Server is down!'",
    "setup-forever": "pm2 startup && pm2 save",
    "nuke-restart": "pm2 kill && npm run pm2:start",
    "emergency-restart": "pm2 restart tic-tac-toe-server --update-env",
    "full-status": "pm2 status && npm run health"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bech32": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-queue": "^0.0.13",
    "express-rate-limit": "^7.5.0",
    "http": "^0.0.1-security",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "pm2": "^6.0.13"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
